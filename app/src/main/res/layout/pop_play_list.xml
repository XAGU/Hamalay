<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_play_list_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/play_list_controller_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_centerVertical="true"
            android:id="@+id/play_list_play_container"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <ImageView
                android:id="@+id/player_list_play_mode_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/selector_player_mode_list_order" />
            <TextView
                android:id="@+id/play_list_play_mode_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="顺序播放"
                android:layout_marginStart="6dp"
                android:textColor="@color/main_color"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/play_list_desc_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/play_list_desc_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/selector_player_sort_desc"/>
            <TextView
                android:id="@+id/play_list_desc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="顺序"
                android:layout_marginStart="6dp"
                android:textColor="@color/main_color"
                android:textSize="16sp"/>
        </LinearLayout>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/play_list_rv"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/play_list_controller_container" />

    <TextView
        android:id="@+id/play_list_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/play_list_rv"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="关闭"
        android:textColor="@color/black"
        android:textSize="18sp" />

</RelativeLayout>